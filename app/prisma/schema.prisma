generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model channel {
  id                 String @id @default(uuid())
  name               String
  type               String @default("clatter.channeltype.message")
  parentworkspace    String
  DateCreated        DateTime @default(now())
}

model message {
  id                 String @id @default(uuid())
  messagetype        String
  parenttype         String
  parentid           String
  content            String
  DateCreated        DateTime @default(now())
  sender             String
}

model pagedocument {
  id                 String @id @default(uuid())
  name               String
  content            Json
  parentworkspace    String
  parentchannel      String?
  DateCreated        DateTime @default(now())
  owner              String
}